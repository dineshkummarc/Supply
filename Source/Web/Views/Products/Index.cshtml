

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@Assets.Script("jquery.validate.min.js")  
@Assets.Script("jquery.validate.unobtrusive.min.js")   


<div class="products"> 
     @foreach (dynamic p in Model)
     {  
        <div class="product"> 
            @p.Title <br/> 
            @p.Description <br/>
            @Assets.Image(@p.ImageUrl) <br/>
            @p.Price <br/>
            @p.MemberPrice <br/>
            @p.UpdatedAt <br/> <br/> <br/> <br/> <br/> 
        </div>
     }
</div>
  
