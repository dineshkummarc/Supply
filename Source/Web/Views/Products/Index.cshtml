

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@Assets.Script("jquery.validate.min.js")  
@Assets.Script("jquery.validate.unobtrusive.min.js")   


<div class="products"> 
     @foreach (dynamic p in Model)
     {  
        <div class="product"> 
            <h2><span class="title" >@p.Title</span></h2> <br/> 
            @Assets.PdfLink(@p.PdfUrl, "Learn more") <br/>
            @Assets.Image(@p.ImageUrl) <br/>
            <div class="desc" >  @p.Description</div> <br/>
            @p.PriceString <br/>
            @p.MemberPriceString <br/>

        </div>
     }
</div>
  
  

@section sidebar{}