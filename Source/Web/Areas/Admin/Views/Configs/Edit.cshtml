@Assets.Script("jquery.validate.min.js")  
@Assets.Script("jquery.validate.unobtrusive.min.js")   

<div class="vidform">
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true) 
        @Form.HiddenID(Model.ID) 
        @Form.TextBoxRequired(name: "Name", value: Model.Name) 
        @Form.TextBoxPassword(name: "Value", value: Model.Value)  
        @Form.Label(name: "UpdatedAt", value: Model.UpdatedAt) 
        @Form.Submit()
    }
</div>
 

